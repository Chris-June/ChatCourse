{
  "name": "chat-app-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter web dev\" \"pnpm --filter @chat/api dev\"",
    "build": "pnpm --filter web build && pnpm --filter @chat/api install",
    "start": "pnpm --filter @chat/api start",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "vercel-build": "pnpm --filter web build && if [ -d apps/web/dist ]; then rm -rf dist && mkdir -p dist && cp -a apps/web/dist/. dist/; else mkdir -p ../../dist && cp -a dist/. ../../dist/; fi"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@vercel/node": "^5.3.4",
    "concurrently": "^9.2.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2",
    "vite": "^7.0.2"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "openai": "^4.47.1",
    "tiktoken": "^1.0.21"
  }
}
